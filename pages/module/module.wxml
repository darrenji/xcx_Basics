<view>
  <view>单选</view>
  <picker bindchange='singlePick' value='{{index}}' range='{{array}}'>
    <view>
      当前选择是：{{array[index]}}
    </view>
  </picker>
</view>

<view>
  <view>级联选择</view>
  <picker mode="multiSelector" bindchange='cascadeSelect' bindcolumnchange='columnChange' value='{{cascadeIndex}}' range='{{multiArray}}'>
    <view>
      当前选择：{{multiArray[0][cascadeIndex[0]]}},{{multiArray[1][cascadeIndex[1]]}}, {{multiArray[2][cascadeIndex[2]]}}
    </view>
  </picker>
</view>

<view>
  <view>时间选择</view>
  <picker mode="time" value="{{time}}" start="09:01" end="21:01" bindchange='timeChange'>
    <view>当前时间：{{time}}</view>
  </picker>
</view>

<view>
  <view>日期选择</view>
  <picker mode="date" value='{{date}}' start="2017-09-01" end="2018.12.30" bindchange='dateChange'>
    <view>当前选择：{{date}}</view>
  </picker>
</view>


<view>
  <view>省市区选择</view>
  <picker mode="region" value='{{region}}' custom-item="{{customItem}}" bindchange='regionChange'>
    <view>
      当前选择：{{region[0]}},{{region[1]}},{{region[2]}}
    </view>
  </picker>
</view>